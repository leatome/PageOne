{% extends 'base.html.twig' %}

{% block title %}Lire {{ book.title }}{% endblock %}

{% block body %}
<div style="background: white; max-width: 800px; margin: 2rem auto; padding: 2rem; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); height: 80vh; overflow-y: scroll;">

    <h1 style="text-align: center; margin-bottom: 2rem;">{{ book.title }}</h1>

    <pre style="white-space: pre-wrap; text-align: justify; font-family: 'Georgia', serif; line-height: 1.6;">
        {{ text }}
    </pre>

</div>
{% endblock %}
